// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider   = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  image         String?
  emailVerified DateTime?
  
  coins         Int       @default(50)
  coinsExpireAt DateTime?
  
  accounts      Account[]
  sessions      Session[]
  products      Product[]
  videos        Video[]
  subscriptions Subscription[]
  transactions  Transaction[]
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Product {
  id             String   @id @default(cuid())
  name           String
  imageUrl       String
  features       String   // คุณสมบัติสินค้า
  concept        String   // concept สั้นๆ
  targetAudience String   // กลุ่มลูกค้าเป้าหมาย
  caption        String?  @db.Text // Caption สำหรับโพส TikTok
  
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  videos         Video[]
  
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Video {
  id          String   @id @default(cuid())
  jobId       String   @unique // from Phaya.io
  taskId      String?
  status      String   @default("processing") // processing, completed, failed
  videoUrl    String?
  prompt      String   @db.Text
  aspectRatio String   @default("portrait") // for TikTok
  provider      String   @default("phaya") // phaya or kie
  progressState String?  // waiting, queuing, generating (for progress bar)
  caption       String?  @db.Text // Caption for TikTok post
  
  productId   String?
  product     Product? @relation(fields: [productId], references: [id], onDelete: SetNull)
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Subscription {
  id           String   @id @default(cuid())
  type         String   @default("monthly") // monthly
  price        Int      @default(199)
  coinsGranted Int      @default(250)
  status       String   @default("active") // active, cancelled, expired
  
  startDate    DateTime @default(now())
  endDate      DateTime
  
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt    DateTime @default(now())
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   // subscription, generation, bonus
  amount      Int      // coins amount (positive = add, negative = deduct)
  description String
  
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  createdAt   DateTime @default(now())
}
